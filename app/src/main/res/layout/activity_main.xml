<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        tools:layout_editor_absoluteX="-36dp"
        tools:layout_editor_absoluteY="576dp">
        <TextView
            android:id="@+id/tituloTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/cardview_dark_background"
            android:text="Bienvenido Jesus Peinado "

            />
        <TextView
            android:id="@+id/bienvenidaTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IMC '2020030720' con Kotlin"

            />

        <EditText
            android:id="@+id/alturaEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingresa tu altura en metros"
            android:inputType="numberDecimal"
            android:textColor="#000000"
            />



        <EditText
            android:id="@+id/pesoEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingresa tu peso en kg"
            android:inputType="numberDecimal"
            android:textColor="#000000"
            android:textColorHint="#A8A8A8"
            />

        <TextView
            android:id="@+id/resultadoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:text="Tu IMC es: "
            />

        <Button
            android:id="@+id/calcularButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular"


            />
        <Button
            android:id="@+id/borrarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Borrar"
            />

        <Button
            android:id="@+id/salirButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salir" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>